ROOT_DIR=/opt/reyzar/ralt-agent

case "$1" in
	start)
		nohup $ROOT_DIR/ralt-agent >> /dev/null 2>&1 &
		;;

	restart)
		pid=`cat /var/run/ralt-agent.pid`
		if [ ! -z $pid ]; then
			kill $pid
		fi
		nohup $ROOT_DIR/ralt-agent >> /dev/null 2>&1 &
		;;

	stop)
		pid=`cat /var/run/ralt-agent.pid`
		if [ ! -z $pid ]; then
			kill $pid
		fi
		;;

	help | *)
		echo "help info: "
		echo -e "\r"
		echo "start              start ralt-agent"
		echo "stop               stop ralt-agent"
		echo "restart            restart ralt-agent"
		;;
esac

exit 0